# Google Drive Configuration
GOOGLE_DRIVE_FOLDER_ID=
GOOGLE_OAUTH_CLIENT_SECRETS=./secrets/client_secret.json
GOOGLE_TOKEN_PATH=./secrets/token.json
GOOGLE_SERVICE_ACCOUNT_JSON=

# Optional: External API Keys
FRED_API_KEY=
WORLD_BANK_API_KEY=
ANBIMA_API_KEY=

# Data Paths
DATA_DIR=./data
CACHE_DIR=./cache
LOG_DIR=./logs
RAW_DATA_DIR=./data/raw
CURATED_DATA_DIR=./data/curated
MANIFEST_DIR=./data/manifests

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# HTTP Configuration
HTTP_TIMEOUT=30
HTTP_RETRIES=3
HTTP_BACKOFF_FACTOR=1.5
HTTP_USER_AGENT=PublicFinanceDataHub/1.0

# Ingest Configuration
INGEST_CHUNK_SIZE=1000
INGEST_WORKERS=4
DROP_DUPLICATES=true
VERIFY_CHECKSUMS=true

# Date Format
DATE_FORMAT=%Y-%m-%d
DATETIME_FORMAT=%Y-%m-%d %H:%M:%S

# Sync Configuration
SYNC_DRY_RUN=false
SYNC_DELETE_REMOTE=false
SYNC_CHUNK_SIZE_MB=50

# Performance
PARQUET_COMPRESSION=snappy
PARQUET_ENGINE=pyarrow

# Debug
DEBUG=false
VERBOSE=false
